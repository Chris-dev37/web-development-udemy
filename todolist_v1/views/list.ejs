<%- include("header") -%>

<div class="box" id="heading">
    <h1><%= listName %></h1>
</div>

<div class="box">
    <% addedItems.forEach(element => { %>
    <form action="/delete" method="POST">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%= element._id %>" onchange="this.form.submit()">
            <p> <%= element.name %> </p>
        </div>
        <input type="hidden" name="listTitle" value="<%= listName %>">
    </form>
    <% }); %>

    <form class="item" action="/" method="POST">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="button" value=<%= listName %>>+</button>
    </form>
</div>

<%- include("footer") -%>